{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/@types/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/convert.js",
    "src/index.js",
    "src/repeatingFractions.js",
    "src/i18n/lang.eng.js",
    "src/i18n/lang.deu.js",
    "src/i18n/index.js"
  ],
  "exclude": ["node_modules"]
}
